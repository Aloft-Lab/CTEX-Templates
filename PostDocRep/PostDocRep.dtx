% \begin{macro}{\Nchapter}
% 用于产生没有编号但在目录中列出的章。
%    \begin{macrocode}
%<*cls>
\newcommand*\Nchapter[1]{%
  \if@mainmatter%
    \@mainmatterfalse%
    \chapter{#1}%
    \@mainmattertrue%
  \else
    \chapter{#1}%
  \fi}
%</cls>
%    \end{macrocode}
% \end{macro}
